{
  "name": "limopola",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "local": "cross-env NEXT_PUBLIC_DEFAULT_MODEL=local-llm && npm run dev",
    "generate-api-table": "tsc scripts/generateModelTable.ts --outDir . && node scripts/generateModelTable.js",
    "format": "prettier --write \"./**/*.{ts,tsx,md}\"",
    "update-packages": "npx ncu -u --color --cacheClear --install always",
    "update-packages-minor": "npx ncu -u --color --cacheClear --target minor --install always",
    "install-local-llm": "npx ipull set .gguf ./models && npx ipull https://huggingface.co/bartowski/openai_gpt-oss-20b-GGUF/resolve/main/openai_gpt-oss-20b-Q6_K.gguf",
    "install-local-llm-gemma-3-270m-it": "npx ipull set .gguf ./models && npx ipull https://huggingface.co/unsloth/gemma-3-270m-it-GGUF/resolve/main/gemma-3-270m-it-Q4_K_M.gguf",
    "validate-local-llm": "npx --no node-llama-cpp chat --model openai_gpt-oss-20b-Q6_K.gguf",
    "quickstart": "npm install && npm run install-local-llm && npm run local"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.67.0",
    "@azure/openai": "^2.0.0",
    "@langchain/classic": "^1.0.0",
    "@langchain/core": "^1.0.1",
    "@langchain/ollama": "^1.0.0",
    "@langchain/openai": "^1.0.0",
    "@langchain/textsplitters": "^1.0.0",
    "@llama-node/llama-cpp": "^0.1.6",
    "@mistralai/mistralai": "^1.10.0",
    "@mlc-ai/web-llm": "^0.2.79",
    "@types/papaparse": "^5.3.16",
    "@types/sqlite3": "^3.1.11",
    "@xenova/transformers": "^2.17.2",
    "cheerio": "^1.1.2",
    "exceljs": "^4.4.0",
    "file-saver": "^2.0.5",
    "highlight.js": "^11.11.1",
    "jotai": "^2.15.0",
    "jszip": "^3.10.1",
    "langchain": "^1.0.1",
    "mammoth": "^1.11.0",
    "marked": "^16.4.1",
    "next": "^16.0.0",
    "node-fetch": "^3.3.2",
    "node-llama-cpp": "^3.14.0",
    "openai": "^6.6.0",
    "papaparse": "^5.5.3",
    "pdf-parse": "^2.4.5",
    "pptx2json": "^0.0.10",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "replicate": "^1.3.0",
    "sqlite3": "^5.1.7"
  },
  "engines": {
    "node": ">=18"
  },
  "overrides": {
    "@langchain/core": "^1.0.1"
  },
  "devDependencies": {
    "@types/node": "24.9.1",
    "@types/pdf-parse": "^1.1.5",
    "@types/react": "19.2.2",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
