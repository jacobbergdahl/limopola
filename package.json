{
  "name": "limopola",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "local": "cross-env NEXT_PUBLIC_DEFAULT_MODEL=local-llm && npm run dev",
    "generate-api-table": "tsc scripts/generateModelTable.ts --outDir . && node scripts/generateModelTable.js",
    "format": "prettier --write \"./**/*.{ts,tsx,md}\"",
    "update-packages": "npx ncu -u --color --cacheClear --install always",
    "update-packages-minor": "npx ncu -u --color --cacheClear --target minor --install always",
    "install-local-llm": "npx ipull set .gguf ./models && npx ipull https://huggingface.co/TheBloke/dolphin-2.6-mistral-7B-dpo-laser-GGUF/resolve/main/dolphin-2.6-mistral-7b-dpo-laser.Q4_K_M.gguf",
    "validate-local-llm": "npx --no node-llama-cpp chat --model dolphin-2.6-mistral-7b-dpo-laser.Q4_K_M.gguf",
    "quickstart": "npm install && npm run install-local-llm && npm run local"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.52.0",
    "@azure/openai": "^2.0.0",
    "@langchain/community": "^0.3.44",
    "@langchain/core": "^0.3.57",
    "@langchain/ollama": "^0.2.0",
    "@langchain/openai": "^0.5.11",
    "@llama-node/llama-cpp": "^0.1.6",
    "@mistralai/mistralai": "^1.6.1",
    "@mlc-ai/web-llm": "^0.2.79",
    "@types/sqlite3": "^3.1.11",
    "@xenova/transformers": "^2.17.2",
    "cheerio": "^1.0.0",
    "exceljs": "^4.4.0",
    "file-saver": "^2.0.5",
    "highlight.js": "^11.11.1",
    "jotai": "^2.12.4",
    "jszip": "^3.10.1",
    "langchain": "^0.3.27",
    "mammoth": "^1.9.0",
    "marked": "^15.0.12",
    "next": "^15.3.2",
    "node-fetch": "^3.3.2",
    "node-llama-cpp": "^3.8.1",
    "officeparser": "^4.2.0",
    "openai": "^4.103.0",
    "pdf-parse": "^1.1.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "replicate": "^1.0.1",
    "sqlite3": "^5.1.7"
  },
  "engines": {
    "node": ">=18"
  },
  "devDependencies": {
    "@types/node": "22.15.21",
    "@types/react": "19.1.5",
    "prettier": "^3.5.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
